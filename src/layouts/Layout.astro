---
export interface Props {
	title: string;
	maxSize?: string;
}

const { title, maxSize } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<main class={`mx-auto p-6 max-w-${maxSize ?? '5xl'}`}>
			<slot />
		</main>
	</body>
</html>